@model IntergalacticRaceLeague.Models.Vehicle

@{
    ViewData["Title"] = "Add Vehicle";
}

<h2>Add Vehicle</h2>

<form asp-action="AddVehicle" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Vehicle Name</label>
        <input type="text" id="Name" name="Name" class="form-control" required>
        <span asp-validation-for="Name" class="text-danger fw-bold fs-5"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Vehicle</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
